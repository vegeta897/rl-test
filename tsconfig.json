{
	"compilerOptions": {
		"target": "es5",
		"module": "es6",
		"moduleResolution": "node",
		"strict": true,
		"noUnusedLocals": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strictPropertyInitialization": false,
		"allowJs": true,
		"lib": ["dom", "es5", "esnext"],
		// Loaders needs this to use the more strict mini-signal types
		"baseUrl": ".",
		"paths": {
			"mini-signals": ["node_modules/resource-loader/typings/mini-signals.d.ts"]
		}
	}
}
